<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".33"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnGestionPersonajes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:text="@string/gestion_de_personajes"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".33"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnGestionComics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_disabled"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:text="@string/gestion_de_comics"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".33"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnGestionSeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_disabled"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:text="@string/gestion_de_series"/>

    </LinearLayout>


</LinearLayout>